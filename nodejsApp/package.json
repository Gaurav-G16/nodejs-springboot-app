{
  "name": "nodejs-user-service",
  "version": "1.0.0",
  "description": "Production-ready Node.js microservice with full observability",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "audit": "npm audit --audit-level=moderate",
    "security:check": "retire --outputformat json --outputpath reports/security/retire-report.json || true",
    "report:dependency": "npm audit --json > reports/security/npm-audit-report.json || true",
    "build": "docker build -t nodejs-user-service:latest .",
    "pipeline": "./scripts/pipeline.sh",
    "clean": "rm -rf node_modules reports coverage .nyc_output logs"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/sdk-node": "^0.44.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "@opentelemetry/exporter-trace-otlp-http": "^0.44.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.44.0",
    "@opentelemetry/resources": "^1.17.0",
    "@opentelemetry/semantic-conventions": "^1.17.0",
    "@opentelemetry/sdk-metrics": "^1.17.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "retire": "^4.0.3",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },

  "engines": {
    "node": ">=18.0.0"
  }
}
