<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="healthIndicator" class="health-indicator">Checking...</div>
    
    <div class="container">
        <div class="header">
            <h1>User Registration</h1>
            <p>Simple and secure user management system</p>
        </div>
        
        <div class="content">
            <div class="form-section">
                <h2>Register New User</h2>
                <form action="/users" method="POST">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter your full name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email address" required>
                    </div>
                    <button type="submit" class="btn">Register User</button>
                </form>
            </div>

            <div class="users-section">
                <h2>Registered Users (<%= users.length %>)</h2>
                <% if (users.length > 0) { %>
                    <table class="users-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Registration Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                            <tr id="user-<%= user._id %>">
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'N/A' %></td>
                                <td>
                                    <button class="btn-delete" onclick="deleteUser('<%= user._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="empty-state">
                        <p>No users registered yet. Be the first to register!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Health check indicator
        async function checkHealth() {
            try {
                const response = await fetch('/health');
                const health = await response.json();
                const indicator = document.getElementById('healthIndicator');
                
                if (health.status === 'healthy') {
                    indicator.textContent = '● Healthy';
                    indicator.className = 'health-indicator health-healthy';
                } else {
                    indicator.textContent = '● Unhealthy';
                    indicator.className = 'health-indicator health-unhealthy';
                }
            } catch (error) {
                const indicator = document.getElementById('healthIndicator');
                indicator.textContent = '● Offline';
                indicator.className = 'health-indicator health-unhealthy';
            }
        }

        // Check health on load and every 30 seconds
        checkHealth();
        setInterval(checkHealth, 30000);

        // Delete user function
        async function deleteUser(userId) {
            if (confirm('Are you sure you want to delete this user?')) {
                try {
                    const response = await fetch(`/users/${userId}`, {
                        method: 'DELETE'
                    });
                    
                    if (response.ok) {
                        document.getElementById(`user-${userId}`).remove();
                        
                        // Update user count
                        const userCount = document.querySelectorAll('.users-table tbody tr').length;
                        document.querySelector('.users-section h2').textContent = `Registered Users (${userCount})`;
                        
                        // Show empty state if no users left
                        if (userCount === 0) {
                            location.reload();
                        }
                    } else {
                        alert('Failed to delete user');
                    }
                } catch (error) {
                    alert('Error deleting user');
                }
            }
        }
    </script>
</body>
</html>
